    <script>
        let originalTotal = <%= total %>;
        let appliedCoupon = null;
        let selectedAddress = null;

        document.addEventListener('DOMContentLoaded', function() {
            const addressDropdown = document.getElementById('addressDropdown');
            const addressDetails = document.getElementById('addressDetails');
            const addressItems = document.querySelectorAll('.address-details');
            let selectedAddress = null;

            // Disable COD for orders above 1000
            const total = <%= total %>;
            const cashRadio = document.getElementById('cashRadio');
            if (total > 1000 && cashRadio) {
                cashRadio.disabled = true;
            }

            // Update payment options
            document.querySelectorAll('input[name="payment_option"]').forEach((radio) => {
                radio.addEventListener('change', function() {
                    if (total > 1000 && this.id === 'cashRadio') {
                        Swal.fire({
                            icon: 'warning',
                            title: 'COD Not Available',
                            text: 'Cash on Delivery is not available for orders above ₹1000. Please choose another payment method.'
                        });
                        return;
                    }

                    if (this.id === 'cashRadio') {
                        paymentMethod = "Cash On Delivery";
                    } else if (this.id === 'onlineRadio') {
                        paymentMethod = "Online Payment";
                    } else if (this.id === 'walletRadio') {
                        paymentMethod = "Wallet";
                    }
                });
            });

            if (addressDropdown) {
                addressDropdown.addEventListener('change', function() {
                    const selectedIndex = this.value;
                    addressDetails.style.display = selectedIndex ? 'block' : 'none';
                    addressItems.forEach(item => item.style.display = 'none');
                    if (selectedIndex) {
                        document.getElementById(`address-details-${selectedIndex}`).style.display = 'block';
                    }
                });
            }

            // Handle address selection
            document.querySelectorAll('.btn-select-address').forEach(button => {
                button.addEventListener('click', function() {
                    const index = this.getAttribute('data-index');
                    const selectedItem = document.getElementById(`address-details-${index}`);
                    
                    // Update visual feedback
                    document.querySelectorAll('.address-item').forEach(item => {
                        item.classList.remove('selected');
                        item.querySelector('.btn-select-address').textContent = 'Select Address';
                    });
                    selectedItem.classList.add('selected');
                    this.textContent = 'Selected';

                    // Store selected address
                    selectedAddress = {
                        name: selectedItem.querySelector('.name').value,
                        addressType: selectedItem.querySelector('.address').value.split(',')[0].trim(),
                        city: selectedItem.querySelector('.address').value.split(',')[1].trim(),
                        state: selectedItem.querySelector('.address').value.split(',')[2].trim(),
                        landmark: selectedItem.querySelector('.landmark').value,
                        pincode: selectedItem.querySelector('.pincode').value,
                        phone: selectedItem.querySelector('.phone').value,
                        altPhone: selectedItem.querySelector('.altPhone').value,
                        id: selectedItem.querySelector('.addressId').value
                    };

                    Swal.fire({
                        icon: 'success',
                        title: 'Address Selected',
                        text: 'Shipping address has been selected.',
                        showConfirmButton: false,
                        timer: 1500
                    });
                });
            });

            // Setup coupon application
            document.querySelectorAll('.apply-coupon').forEach(button => {
                button.addEventListener('click', function() {
                    const couponCode = this.getAttribute('data-coupon-code');
                    console.log('Clicked apply coupon with code:', couponCode);
                    applyCoupon(couponCode);
                });
            });

            async function applyCoupon(couponCode) {
                try {
                    console.log('Applying coupon:', couponCode);
                    
                    const response = await fetch('/apply-coupon', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({ couponCode })
                    });

                    const data = await response.json();
                    console.log('Response:', data);

                    if (data.success) {
                        appliedCoupon = couponCode;
                        const discountElement = document.querySelector('[data-discount]');
                        const discountAmount = document.querySelector('.discount-amount');
                        const subtotalElement = document.getElementById('subtotal');
                        const removeCouponBtn = document.getElementById('removeCouponBtn');
                        
                        // Update discount amount
                        discountElement.setAttribute('data-discount', data.discount);
                        discountAmount.textContent = `₹${Math.floor(data.discount)}`;
                        
                        // Update total amount
                        const newTotal = originalTotal - data.discount;
                        subtotalElement.querySelector('span').textContent = `₹${Math.floor(newTotal)}`;
                        
                        // Show remove coupon button
                        removeCouponBtn.style.display = 'inline-block';
                        
                        Swal.fire({
                            icon: 'success',
                            title: 'Coupon Applied',
                            text: `Discount of ₹${Math.floor(data.discount)} applied successfully!`,
                            confirmButtonText: 'OK'
                        });
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: data.message || 'Failed to apply coupon',
                            confirmButtonText: 'OK'
                        });
                    }
                } catch (error) {
                    console.error('Error:', error);
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: 'Failed to apply coupon. Please try again.',
                        confirmButtonText: 'OK'
                    });
                }
            }

            // Remove coupon functionality
            document.getElementById('removeCouponBtn').addEventListener('click', async function() {
                try {
                    const response = await fetch('/remove-coupon', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        }
                    });

                    const data = await response.json();

                    if (data.success) {
                        appliedCoupon = null;
                        const discountElement = document.querySelector('[data-discount]');
                        const discountAmount = document.querySelector('.discount-amount');
                        const subtotalElement = document.getElementById('subtotal');
                        const removeCouponBtn = document.getElementById('removeCouponBtn');
                        
                        // Reset discount
                        discountElement.setAttribute('data-discount', '0');
                        discountAmount.textContent = '₹0';
                        
                        // Reset total to original
                        subtotalElement.querySelector('span').textContent = `₹${Math.floor(originalTotal)}`;
                        
                        // Hide remove coupon button
                        removeCouponBtn.style.display = 'none';
                        
                        Swal.fire({
                            icon: 'success',
                            title: 'Coupon Removed',
                            text: 'Coupon has been removed successfully!',
                            confirmButtonText: 'OK'
                        });
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: data.message || 'Failed to remove coupon',
                            confirmButtonText: 'OK'
                        });
                    }
                } catch (error) {
                    console.error('Error:', error);
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: 'Failed to remove coupon. Please try again.',
                        confirmButtonText: 'OK'
                    });
                }
            });

            // Place order functionality
            let paymentMethod = "Cash On Delivery"; // Default payment method

            // Update payment options
            document.querySelectorAll('input[name="payment_option"]').forEach((radio) => {
                radio.addEventListener('change', function() {
                    if (this.id === 'cashRadio') {
                        paymentMethod = "Cash On Delivery";
                    } else if (this.id === 'onlineRadio') {
                        paymentMethod = "Online Payment";
                    } else if (this.id === 'walletRadio') {
                        paymentMethod = "Wallet";
                    }
                });
            });

            // Place order button click handler
            document.getElementById('placeOrder').addEventListener('click', async function(e) {
                e.preventDefault();

                if (!selectedAddress) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Address Required',
                        text: 'Please select a shipping address before placing the order.',
                    });
                    return;
                }

                const paymentMethod = document.querySelector('input[name="payment_option"]:checked');
                if (!paymentMethod) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Select Payment Method',
                        text: 'Please select a payment method'
                    });
                    return;
                }

                // Get cart items
                const cartItems = Array.from(document.querySelectorAll('.order_table tbody tr'))
                    .filter(row => row.querySelector('.productId'))
                    .map(row => {
                        return {
                            id: row.querySelector('.productId').textContent.trim(),
                            name: row.querySelector('h5').textContent.trim(),
                            quantity: parseInt(row.querySelector('.product-qty').textContent.split(':')[1].trim()),
                            price: parseFloat(row.querySelector('td:nth-child(3)').textContent.replace('₹', '').trim())
                        };
                    });

                const orderData = {
                    address: selectedAddress,
                    products: cartItems,
                    subtotal: parseFloat(document.querySelector('#subtotal').textContent.replace('₹', '').trim()),
                    total: parseFloat(document.querySelector('#subtotal').textContent.replace('₹', '').trim()),
                    paymentMethod: paymentMethod.value,
                    coupon: appliedCoupon
                };

                try {
                    const response = await fetch('/checkout', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify(orderData)
                    });

                    const data = await response.json();

                    if (!data.success) {
                        throw new Error(data.message || 'Failed to create order');
                    }

                    if (paymentMethod.value === 'razorpay') {
                        try {
                            // First create Razorpay order
                            const razorpayResponse = await fetch('/create-razorpay-order', {
                                method: 'POST',
                                headers: {
                                    'Content-Type': 'application/json'
                                },
                                body: JSON.stringify({
                                    amount: orderData.total,
                                    selectedAddress: selectedAddress
                                })
                            });

                            const razorpayData = await razorpayResponse.json();
                            
                            if (!razorpayData.success) {
                                throw new Error(razorpayData.message || 'Failed to create Razorpay order');
                            }

                            const options = {
                                key: razorpayData.key,
                                amount: razorpayData.order.amount,
                                currency: razorpayData.order.currency,
                                name: "SIXIT Store",
                                description: "Order Payment",
                                order_id: razorpayData.order.id,
                                handler: async function(response) {
                                    // Verify payment
                                    const verifyResponse = await fetch('/verify-payment', {
                                        method: 'POST',
                                        headers: {
                                            'Content-Type': 'application/json'
                                        },
                                        body: JSON.stringify({
                                            orderId: data.orderId,
                                            razorpay_payment_id: response.razorpay_payment_id,
                                            razorpay_order_id: response.razorpay_order_id,
                                            razorpay_signature: response.razorpay_signature
                                        })
                                    });

                                    const verifyData = await verifyResponse.json();

                                    if (verifyData.success) {
                                        window.location.href = `/orderComform?id=${data.orderId}&msg=success`;
                                    } else {
                                        window.location.href = `/payment-failed?error=${encodeURIComponent(verifyData.message)}`;
                                    }
                                },
                                modal: {
                                    ondismiss: function() {
                                        window.location.href = '/payment-failed?error=Payment cancelled by user';
                                    }
                                },
                                prefill: {
                                    name: '<%= user.name %>',
                                    email: '<%= user.email %>',
                                    contact: '<%= user.phone %>'
                                },
                                theme: {
                                    color: "#487379"
                                }
                            };

                            const rzp1 = new Razorpay(options);
                            rzp1.on('payment.failed', function (response) {
                                console.error('Payment failed:', response.error);
                                window.location.href = `/payment-failed?error=${encodeURIComponent(response.error.description)}`;
                            });
                            rzp1.open();
                        } catch (error) {
                            console.error('Error creating Razorpay order:', error);
                            Swal.fire({
                                icon: 'error',
                                title: 'Error',
                                text: 'Failed to create Razorpay order'
                            });
                        }
                    } else {
                        // For non-Razorpay payments (COD, Wallet)
                        Swal.fire({
                            icon: 'success',
                            title: 'Order Placed Successfully',
                            text: 'Thank you for your purchase!'
                        }).then(() => {
                            window.location.href = `/orderComform?id=${data.orderId}&msg=success`;
                        });
                    }
                } catch (error) {
                    console.error('Error:', error);
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: error.message || 'Failed to place order'
                    });
                }
            });

            // Add address form handling
            const addressForm = document.getElementById('addressForm');
            if (addressForm) {
                // Function to show error message
                function showError(elementId, message) {
                    const errorElement = document.getElementById(elementId + 'Error');
                    errorElement.textContent = message;
                    errorElement.style.display = 'block';
                }

                // Function to hide error message
                function hideError(elementId) {
                    const errorElement = document.getElementById(elementId + 'Error');
                    errorElement.style.display = 'none';
                }

                // Function to validate name
                function validateName(name) {
                    return /^[a-zA-Z ]{3,50}$/.test(name);
                }

                // Function to validate phone number
                function validatePhone(phone) {
                    return /^[0-9]{10}$/.test(phone);
                }

                // Function to validate pincode
                function validatePincode(pincode) {
                    return /^[0-9]{6}$/.test(pincode);
                }

                // Add input event listeners for real-time validation
                document.getElementById('fullName').addEventListener('input', function() {
                    if (!validateName(this.value)) {
                        showError('name', 'Please enter a valid name (3-50 characters, letters only)');
                    } else {
                        hideError('name');
                    }
                });

                document.getElementById('phone').addEventListener('input', function() {
                    if (!validatePhone(this.value)) {
                        showError('phone', 'Please enter a valid 10-digit phone number');
                    } else {
                        hideError('phone');
                    }
                });

                document.getElementById('altPhone').addEventListener('input', function() {
                    if (this.value && !validatePhone(this.value)) {
                        showError('altPhone', 'Please enter a valid 10-digit phone number');
                    } else {
                        hideError('altPhone');
                    }
                });

                document.getElementById('address').addEventListener('input', function() {
                    if (this.value.length < 10) {
                        showError('address', 'Address should be at least 10 characters long');
                    } else {
                        hideError('address');
                    }
                });

                document.getElementById('city').addEventListener('input', function() {
                    if (!validateName(this.value)) {
                        showError('city', 'Please enter a valid city name');
                    } else {
                        hideError('city');
                    }
                });

                document.getElementById('state').addEventListener('input', function() {
                    if (!validateName(this.value)) {
                        showError('state', 'Please enter a valid state name');
                    } else {
                        hideError('state');
                    }
                });

                document.getElementById('landmark').addEventListener('input', function() {
                    if (this.value.length < 3) {
                        showError('landmark', 'Landmark should be at least 3 characters long');
                    } else {
                        hideError('landmark');
                    }
                });

                document.getElementById('pincode').addEventListener('input', function() {
                    if (!validatePincode(this.value)) {
                        showError('pincode', 'Please enter a valid 6-digit pincode');
                    } else {
                        hideError('pincode');
                    }
                });

                // Form submission validation
                addressForm.addEventListener('submit', async function(e) {
                    e.preventDefault();
                    let isValid = true;

                    // Validate all fields
                    const fullName = document.getElementById('fullName').value;
                    const phone = document.getElementById('phone').value;
                    const altPhone = document.getElementById('altPhone').value;
                    const addressType = document.getElementById('addressType').value;
                    const address = document.getElementById('address').value;
                    const city = document.getElementById('city').value;
                    const state = document.getElementById('state').value;
                    const landmark = document.getElementById('landmark').value;
                    const pincode = document.getElementById('pincode').value;

                    // Validate each field
                    if (!validateName(fullName)) {
                        showError('name', 'Please enter a valid name');
                        isValid = false;
                    }

                    if (!validatePhone(phone)) {
                        showError('phone', 'Please enter a valid phone number');
                        isValid = false;
                    }

                    if (altPhone && !validatePhone(altPhone)) {
                        showError('altPhone', 'Please enter a valid alternative phone number');
                        isValid = false;
                    }

                    if (!addressType) {
                        showError('addressType', 'Please select an address type');
                        isValid = false;
                    }

                    if (address.length < 10) {
                        showError('address', 'Address is too short');
                        isValid = false;
                    }

                    if (!validateName(city)) {
                        showError('city', 'Please enter a valid city name');
                        isValid = false;
                    }

                    if (!validateName(state)) {
                        showError('state', 'Please enter a valid state name');
                        isValid = false;
                    }

                    if (landmark.length < 3) {
                        showError('landmark', 'Landmark is too short');
                        isValid = false;
                    }

                    if (!validatePincode(pincode)) {
                        showError('pincode', 'Please enter a valid pincode');
                        isValid = false;
                    }

                    if (!isValid) {
                        return;
                    }

                    try {
                        const response = await fetch('/check-out-addaddress', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json'
                            },
                            body: JSON.stringify({
                                name: fullName,
                                phone: phone,
                                altPhone: altPhone,
                                addressType: addressType,
                                address: address,
                                city: city,
                                state: state,
                                landmark: landmark,
                                pincode: pincode
                            })
                        });

                        if (response.ok) {
                            location.reload();
                        } else {
                            Swal.fire({
                                icon: 'error',
                                title: 'Error',
                                text: 'Failed to add address. Please try again.'
                            });
                        }
                    } catch (error) {
                        console.error('Error adding address:', error);
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: 'An error occurred. Please try again.'
                        });
                    }
                });
            }
        });
    </script>